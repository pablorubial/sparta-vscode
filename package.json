{
  "name": "sparta-vscode",
  "displayName": "SPARTA",
  "description": "Syntax highlighting and snippets for SPARTA input files",
  "version": "0.0.1",
  "publisher": "pablo",
  "main": "./out/extension.js", 
  "activationEvents": [
    "onLanguage:sparta"
  ],
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Programming Languages"
  ],
  
  "contributes": {
    "languages": [
      {
        "id": "sparta",
        "aliases": ["SPARTA", "sparta"],
        "extensions": [".in", ".simulation", ".sparta", ".coarse", "medium", ".fine", ".extremely_fine"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./fileicons/icons/icon.svg",
          "dark": "./fileicons/icons/icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "sparta",
        "scopeName": "source.sparta",
        "path": "./syntaxes/sparta.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "sparta",
        "path": "./snippets/sparta.json"
      }
    ]
  },

  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/vscode": "^1.106.0"
  },

  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  }
}
